{
	"is-c3-addon": true,
	"type": "effect",
	"name": "Adjust HSB",
	"id": "hsbadjust",
	"version": "0.1",
	"author": "Ludonaut / Somebody",
	"website": "https://www.construct.net",
	"documentation": "https://www.construct.net",
	"description": "Adjust image colors using Hue, Saturation and Brightness.",
	"file-list": [
		"lang/en-US.json",
		"addon.json",
		"effect.fx"
	],
	
	"category": "color",
	"blends-background": false,
	"cross-sampling": false,
	"preserves-opaqueness": true,
	"animated": false,
	"extend-box": {
		"horizontal": 0,
		"vertical": 0
	},
	
	"parameters": [
		{
			"id": "hue",
			"type": "percent",
			"initial-value": 0,
			"uniform": "huerotate"
		},
		{
			"id": "saturation",
			"type": "percent",
			"initial-value": 1,
			"uniform": "satadjust"
		},
		{
			"id": "brightness",
			"type": "percent",
			"initial-value": 1,
			"uniform": "briadjust"
		}
	]
}