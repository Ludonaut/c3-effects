{
	"is-c3-addon": true,
	"type": "effect",
	"name": "Outline",
	"id": "outline",
	"version": "0.1",
	"author": "Ludonaut",
	"website": "https://www.construct.net",
	"documentation": "https://www.construct.net",
	"description": "Applies an outline / stroke effect.",
	"file-list": [
		"lang/en-US.json",
		"addon.json",
		"effect.fx"
	],
	
	"category": "blend",
	"blends-background": false,
	"cross-sampling": false,
	"preserves-opaqueness": true,
	"animated": false,
	"extend-box": {
		"horizontal": 0,
		"vertical": 0
	},
	
	"parameters": [
		{
			"id": "thickness",
			"type": "float",
			"initial-value": 5,
			"uniform": "thickness"
		},
		{
			"id": "outlinecolor",
			"type": "color",
			"initial-value": [0, 0, 0],
			"uniform": "outlineColor"
		},
		{
			"id": "quality",
			"type": "float",
			"initial-value": 50,
			"uniform": "quality"
		}
	]
}